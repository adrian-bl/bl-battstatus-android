<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:stretchColumns="0">
	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:layout_width="fill_parent" android:text="@string/c_details"></TextView>
		<CheckBox android:id="@+id/cb_config_details" android:layout_height="wrap_content"></CheckBox>
	</TableRow>

	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:layout_width="fill_parent" android:text="@string/c_fahrenheit"></TextView>
		<CheckBox android:id="@+id/cb_config_fahrenheit" android:layout_height="wrap_content"></CheckBox>
	</TableRow>

	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:layout_width="fill_parent"></TextView>
	</TableRow>
	
	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:layout_width="fill_parent" android:text="@string/c_theme"></TextView>
	</TableRow>

	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:layout_width="fill_parent"></TextView>
	</TableRow>


</TableLayout>


<TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:stretchColumns="0,4">

	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView></TextView>
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:padding="12dip"
			android:id="@+id/thx0"
			android:src="@drawable/wfb_cr_h_062"
		/>
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:padding="12dip"
			android:id="@+id/thx1"
			android:src="@drawable/wfs_cr_h_062"
		/>
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:padding="12dip"
			android:id="@+id/thx2"
			android:src="@drawable/wfb_062"
		/>
		<TextView></TextView>
	</TableRow>
	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:stretchColumns="0,4">
		<TextView></TextView>
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:padding="12dip"
			android:id="@+id/thx3"
			android:src="@drawable/bfb_cr_h_062"
		/>
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:padding="12dip"
			android:id="@+id/thx4"
			android:src="@drawable/bfs_cr_h_062"
		/>
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:padding="12dip"
			android:id="@+id/thx5"
			android:src="@drawable/bfb_062"
		/>
		<TextView></TextView>
	</TableRow>
</TableLayout>

</LinearLayout>
