<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	
        <ImageView android:id="@+id/image"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:paddingLeft="12dip" android:paddingTop="4dip"
            android:src="@drawable/hintarrow" />

	
<TextView  
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:paddingTop="32dip" android:paddingBottom="64dip"
	android:text="'Battery Circle' is now running and will startup by itself on next boot."
	/>
	
<Button android:layout_gravity="center" android:id="@+id/hide" style="@style/ActionButton" android:text="Return to Homescreen" />

<Button android:layout_marginTop="20dip" android:layout_gravity="center" android:id="@+id/kill" style="@style/ActionButton" android:text="Terminate application" />

<Button android:layout_marginTop="20dip" android:layout_gravity="center" android:id="@+id/debug" style="@style/ActionButton" android:text="Dededeeedebug!" />

	
</LinearLayout>

